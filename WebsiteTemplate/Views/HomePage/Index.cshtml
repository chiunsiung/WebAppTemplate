    <script>
        $(document).ready(function() {
            var dataPoints = @Html.Raw(ViewBag.DataPoints);

            var chart = new CanvasJS.Chart("myBarChart", {
                animationEnabled: true,
                title: {
                    text: "Sales Chart"
                },
                axisY: {
                    title: "Number of Sales",
                    gridThickness: 0
                },
                data: [{
                    type: "bar",
                    indexLabel: "{y}",
                    dataPoints: dataPoints
                }]
            });
            chart.render();
        });
